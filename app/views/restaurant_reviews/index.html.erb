<p id="notice"><%= notice %></p>

<h1>Listing Restaurant Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Parking</th>
      <th>Service</th>
      <th>Hygiene</th>
      <th>Comment</th>
      <th>User</th>
      <th>Restaurant</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurant_reviews.each do |restaurant_review| %>
      <tr>
        <td><%= restaurant_review.parking %></td>
        <td><%= restaurant_review.service %></td>
        <td><%= restaurant_review.hygiene %></td>
        <td><%= restaurant_review.comment %></td>
        <td><%= restaurant_review.user_id %></td>
        <td><%= restaurant_review.restaurant_id %></td>
        <td><%= link_to 'Show', restaurant_review %></td>
        <td><%= link_to 'Edit', edit_restaurant_review_path(restaurant_review) %></td>
        <td><%= link_to 'Destroy', restaurant_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

