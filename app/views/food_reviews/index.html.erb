<p id="notice"><%= notice %></p>

<h1>Listing Food Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Food</th>
      <th>Real pic</th>
      <th>Price</th>
      <th>Taste</th>
      <th>Quantity</th>
      <th>Comment</th>
      <th>Restaurant</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @food_reviews.each do |food_review| %>
      <tr>
        <td><%= food_review.food_id %></td>
        <td><%= food_review.real_pic %></td>
        <td><%= food_review.price %></td>
        <td><%= food_review.taste %></td>
        <td><%= food_review.quantity %></td>
        <td><%= food_review.comment %></td>
        <td><%= food_review.restaurant_id %></td>
        <td><%= link_to 'Show', food_review %></td>
        <td><%= link_to 'Edit', edit_food_review_path(food_review) %></td>
        <td><%= link_to 'Destroy', food_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

